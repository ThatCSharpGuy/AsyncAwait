<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsyncAwait.AdvancedPage">
    <StackLayout>
        <ProgressBar Margin="10,20" x:Name="ProgressBar"></ProgressBar>
		<Label x:Name="IntegerReport" Text="0" FontSize="Large" HorizontalTextAlignment="Center"></Label>
		<Button  Clicked="StartTaskClicked" Text="Start task"></Button>
		<Button  Clicked="StartTimedTaskClicked" Text="Start task (timed)"></Button>
		<Button  Clicked="StopTaskClicked" Text="Cancel task"></Button>
    </StackLayout>
</ContentPage>